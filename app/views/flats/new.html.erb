<h1>Add a new flat</h1>
<div class="form">
    <%= simple_form_for @flat do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :description %>
      <%= f.input :price_per_night %>
      <%= f.input :number_of_guests %>
      <%= f.submit "Add", class: "btn btn-primary" %>
    <% end %>
  </div>